<?xml version="1.0" encoding="utf-8" ?>
<ex:WindowEx
    x:Class="LightView.Windows.CrashPadWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="using:WinUIEx"
    xmlns:local="using:LightView.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="错误报告"
    mc:Ignorable="d">

    <ex:WindowEx.SystemBackdrop>
        <MicaBackdrop />
    </ex:WindowEx.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="72" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="40,36"
            FontWeight="SemiBold"
            Style="{ThemeResource TitleTextBlockStyle}">
            啊哦，出错了 :-(
        </TextBlock>
        <Grid Grid.Row="1" Margin="0,16">
            <TextBox
                Margin="36,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsReadOnly="True"
                Text="{x:Bind _crashInfo, Mode=OneWay}" />
        </Grid>
        <Border
            Grid.Row="2"
            Background="{ThemeResource SystemControlBackgroundChromeBlackLowBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1,0,0,0">

            <Grid
                Margin="16"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="CloseButton" VerticalAlignment="Stretch">关闭</Button>
                <Button
                    x:Name="CopyButton"
                    Grid.Column="1"
                    VerticalAlignment="Stretch"
                    Style="{ThemeResource AccentButtonStyle}">
                    复制错误信息
                </Button>
            </Grid>
        </Border>
    </Grid>
</ex:WindowEx>

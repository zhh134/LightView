<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="LightView.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LightView.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="LightView">
    <Grid>
        <Grid x:Name="SettingsLayer" 
              Background="{ThemeResource SystemControlBaseHighAcrylicElementMediumHighBrush}" 
              Canvas.ZIndex="99" 
              Visibility="Collapsed">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TitleBar x:Name="SettingsTitleBar" 
                      Height="48" 
                      Grid.Row="0" 
                      IsBackButtonVisible="True" 
                      BackRequested="SettingsTitleBar_BackRequested"
                      Title="设置" 
                      Canvas.ZIndex="1" />
            <Frame x:Name="settingsFrame" Grid.Row="1" /> 
        </Grid>
        
        <Frame x:Name="rootFrame" />
    </Grid>
</Window>

<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="LightView.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LightView.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock
                Margin="10"
                FontSize="24"
                Text="Settings" />

            <controls:SettingsCard Header="About">
                <StackPanel>
                    <TextBlock Text="LightView Application" />
                    <TextBlock Text="Version1.0.0" />
                </StackPanel>
            </controls:SettingsCard>

            <controls:SettingsCard Header="Theme">
                <ComboBox SelectedItem="{x:Bind ViewModel.SelectedTheme, Mode=TwoWay}">
                    <ComboBoxItem Content="Light" />
                    <ComboBoxItem Content="Dark" />
                    <ComboBoxItem Content="System" />
                </ComboBox>
            </controls:SettingsCard>
        </StackPanel>
    </Grid>
</Page>
